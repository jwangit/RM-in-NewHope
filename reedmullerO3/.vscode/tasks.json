{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build_RM",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "-O3",
                "matrix.c",
                "combination.c",
                "ksubset.c",
                "vector.c",
                "reedmuller.c",
                "rmencode.c",
                "-o",
                "RMoutput.out"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}